@page
@model MyApp.Namespace.EditModel
@{
    ViewData["Title"] = "Edit Role";
}
<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="input.Name" class="control-label"></label>
                <input asp-for="input.Name" class="form-control" />
                <span asp-validation-for="input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a class="btn btn-primary" asp-page="./Index">Index</a>
            </div>
        </form>
        <hr>
        <p>All claim of Role:
        <a asp-page="./AddRoleClaim" asp-route-roleid = "@Model.role.Id">+ Add Role Claim</a>
        </p>
        @if(Model.Claims.Count >0)
        {
            <ul>
                @foreach (var claim in Model.Claims)
                {
                    <a asp-page="./EditRoleClaim" asp-route-claimid="@claim.Id">@claim.ClaimType : @claim.ClaimValue</a>
                    <br/>
                }
            </ul>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
