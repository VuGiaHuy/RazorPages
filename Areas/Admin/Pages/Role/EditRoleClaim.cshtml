@page
@model MyApp.Namespace.EditRoleClaim
@{
    ViewData["Title"] = "Edit Role Claim";
}
<h2>@ViewData["Title"]</h2>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="input.ClaimName" class="control-label"></label>
                <input asp-for="input.ClaimName" class="form-control" />
                <span asp-validation-for="input.ClaimName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="input.ClaimValue" class="control-label"></label>
                <input asp-for="input.ClaimValue" class="form-control" />
                <span asp-validation-for="input.ClaimValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
                <input type="submit" asp-page-handler="Delete" asp-route-claimid="@Model.Claim.Id" value="Delete" class="btn btn-danger"/>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-roleid="@Model.role.Id">Edit Role</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
