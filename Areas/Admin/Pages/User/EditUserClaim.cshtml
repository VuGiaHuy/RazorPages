@page
@model GiaHuy.User.EditUserClaimModel
@{
    ViewData["Title"] = "Edit User Claim";
}
<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="input.ClaimType" class="control-label"></label>
                <input asp-for="input.ClaimType" class="form-control" />
                <span asp-validation-for="input.ClaimType" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="input.ClaimValue" class="control-label"></label>
                <input asp-for="input.ClaimValue" class="form-control" />
                <span asp-validation-for="input.ClaimValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if(Model.userClaim != null)
                {
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <input type="submit" value="Delete" asp-route-claimid="@Model.userClaim.Id" class="btn btn-danger" asp-page-handler="Delete" />

                }
                else
                {
                    <input type="submit" value="Create" class="btn btn-primary" />
                }
                <a class="btn btn-primary" asp-page="./AddRole" asp-route-id="@Model.user.Id">Edit Role</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

